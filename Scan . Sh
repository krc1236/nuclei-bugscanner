#!/bin/bash
TARGET=$1
if [ -z "$TARGET" ]; then
  echo "Usage: scan.sh <target-url>"
  exit 1
fi

echo "[*] Scanning $TARGET"
nuclei -u "$TARGET" -json -o /tmp/result.json

if [[ -f /tmp/result.json ]]; then
  curl -X POST \
    -H "Content-Type: application/json" \
    --data-binary @/tmp/result.json \
    ${WEBHOOK_URL}
fi
